rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /events/{eventId}/{allPaths=**} {
      // Allow authenticated users to read and write photos in events they're part of
      // Note: In production, you'd want to verify event membership via Firestore
      allow read: if request.auth != null;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}


